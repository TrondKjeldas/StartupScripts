[Unit]
Description=KNXMonitor, telegram logging service
After=syslog.target knxdataif.service
BindsTo=knxdataif.service

[Service]
User=trond
Environment="PYTHONIOENCODING=utf-8"
WorkingDirectory=/home/trond/Projects/knxmonitor
ExecStart=/usr/bin/python knxmonitor.py ip:localhost
Restart=always

[Install]
WantedBy=knxdataif.service
